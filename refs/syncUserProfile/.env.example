# Appwrite (Function runtime injects APPWRITE_FUNCTION_* automatically if configured in Console)
APPWRITE_ENDPOINT=https://appwrite.example.com/v1
APPWRITE_PROJECT_ID=project_id
APPWRITE_API_KEY=YOUR_SERVER_API_KEY

# Racoon LMS
APPWRITE_DATABASE_ID=lms
APPWRITE_PROFILES_COLLECTION_ID=profiles

# Optional: allow service-to-service calls (no session) for admin tools
SYNC_PROFILE_SERVICE_SECRET=CHANGE_ME_STRONG
